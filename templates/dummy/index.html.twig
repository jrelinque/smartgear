{% extends 'base.html.twig' %}

{% block title %}Hello DummyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% set token = app.session.get('iris_token') %}
    <div class="example-wrapper">
        <h1> SmartGear</h1>
        {% if token %}
            <details>
                <summary>Token IRIS</summary>
                <p>{{  token }}</p>
            </details>
        {% else %}
            <h4><a href="{{ '/connect/google/' }}">Login with google</a></h4>
        {%  endif %}

        {% if response_http %}
            <details>
                <summary>WebService called: {{ called_method }}</summary>
                <p>{{ response_http }}</p>
            </details>
        {%  endif %}

    </div>



{% endblock %}
